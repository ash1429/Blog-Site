<% include ../partials/header %>

<div class="container new_HeadContain">
  
  <h1 class="new_h1">Add comment here:</h1>
  <form class="new_Form" action="/posts/<%= id %>/comments" method="POST">
    <div class="form-group">
      <label for="name">Name: </label>
      <input type="text" class="form-control" name="comment[author]" id="name" placeholder="name" autofocus>
    </div>
    <div class="form-group">
      <label for="text">Comment: </label>
      <textarea class="form-control" rows="3" name="comment[text]" id="text" placeholder="Write .."></textarea>
    </div>
    <input type="submit" class="btn btn-primary btn-lg btn-block new_btnSubmit" value="Submit">
    <a href="/campgrounds">Go back</a>
  </form>

</div>

<% include ../partials/footer %>